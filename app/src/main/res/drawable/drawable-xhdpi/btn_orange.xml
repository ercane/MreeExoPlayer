<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="#e7e7e8"
                android:endColor="#cfcfcf"
                android:startColor="#f1f1f2"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/basePrimaryDark"
                      android:startColor="@color/basePrimary"/>
            <stroke android:width="1dp" android:color="@color/basePrimaryDark"/>
            <corners android:radius="4dp"/>
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp"
                     android:top="10dp"/>
        </shape>
    </item>
</selector>
